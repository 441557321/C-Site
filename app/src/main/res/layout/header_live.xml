<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/ic_head_live"
        android:text="@string/header_live"
        android:textColor="@color/darkest"/>

    <TextView
        android:id="@+id/tv_head_live_right"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/darkest"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:drawableRight="@drawable/ic_gray_arrow_right"
        android:text="@string/tv_head_live_right"/>
    <TextView
        android:id="@+id/tv_head_live_middle"
        android:layout_toLeftOf="@id/tv_head_live_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:text="4560"/>
    <TextView
        android:id="@+id/tv_head_live_left"
        android:layout_toLeftOf="@id/tv_head_live_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/darkest"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:text="@string/tv_head_live_left"/>


</RelativeLayout>